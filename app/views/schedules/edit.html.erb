<h1>予定編集ページ</h1>

<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<%= form_with model: @schedule, url: schedule_path(@schedule), method: :patch do |form| %>
  <div class="form-group">
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, class: "form-control", maxlength: 20 %>
  </div>

  <div class="form-group">
    <%= form.label :start_date, "開始日" %>
    <%= form.date_field :start_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_date, "終了日" %>
    <%= form.date_field :end_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :all_day, "終日" %>
    <%= form.check_box :all_day, class: "form-check-input" %>
  </div>

  <div class="form-group">
    <%= form.label :memo, "スケジュールメモ" %>
    <%= form.text_area :memo, class: "form-control", maxlength: 500 %>
  </div>

  <%= form.submit "更新", class: "btn btn-primary" %>
<% end %>